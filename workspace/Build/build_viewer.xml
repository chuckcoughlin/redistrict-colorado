<!-- Build and deploy the shapefile viewer -->
<project name="viewer.install" default="all" basedir=".">
	<import file="${basedir}/build.xml"/>
	<property name="jar.name" value="shapefile-viewer.jar" />
	<property name="src.dir" value="${basedir}/../ShapeViewer/src" />
	
	<!-- This target will build the core application and deploy it to the robot -->
	<target name="all" depends="clean, build, jar, deploy" />
	
	<!-- Remove the existing target -->
	<target name="clean" description="Remove existing build products">
		<delete dir="${temp.dir}"/>
		<mkdir dir="${temp.dir}"/>
		<mkdir dir="${lib.dir}"/>
		<mkdir dir="${bin.dir}"/>
		<delete file="${lib.dir}/${jump-core-jar}" />
		<delete file="${lib.dir}/${jump-ui-jar}" />
		<delete file="${lib.dir}/${shapefile-viewer-jar}" />
		<delete dir="${temp.dir}" />
	</target>
	
	<target name="build" description="Compile the source">
		<echo message="Compile  ${src.dir}" />
		<mkdir dir="${temp.dir}"/>
		<javac	srcdir="${src.dir}"
				destdir="${temp.dir}"
				compiler="javac10+"
				source="10" target="10"
				debug = "true"
				modulepathref="common-modulepath"
				includeantruntime="false"
		/>
	</target>
	
	<!-- Bundle the application code into a jar file -->
	<target name ="jar" description="Create a jar ">
	    <jar destfile="${lib.dir}/${shapefile-viewer-jar}" includes="**/*.class,**/*.png" basedir="${temp.dir}">
		    <manifest>
		      	<attribute name="Main-Class"
		                   value="redistrict.colorado.ShapefileViewer"/>
		    </manifest>
	    </jar>
	</target>
	
	<!-- Copy the new jar file into the local deployment area. -->
	<target name="deploy" >
		<echo message="Copying script files into ${bin.dir}" />
		<mkdir dir="${bin.dir}" />
		<copy todir="${bin.dir}">
			<fileset dir="${basedir}">
				<include name="*.sh"/>
			</fileset>
		</copy>
		<chmod dir="${bin.dir}" perm="ugo+rx"
						       includes="*.sh"/>
	</target>		
</project>