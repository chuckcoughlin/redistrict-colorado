<!-- Common ant routines intended for including in other scripts -->
<project name="ant.common" basedir=".">
	<property name="archive.dir" value="${basedir}/../Archive" />
	<property name="bin.dir" value="${basedir}/../../bin" />
	<property name="build.version" value="1.0" />
	<property name="install.dir" location="${basedir}/../../app" />
	<property name="lib.dir" value="${basedir}/lib" />
	<property name="temp.dir" value="${basedir}/temp" />
	<property name="cts-jar" value="cts-1.5.1.jar" />
	<property name="jump-core-jar" value="open-jump-core.jar" />
	<property name="jump-ui-jar" value="open-jump-ui.jar" />
	<property name="map-analyzer-jar" value="map-analyzer.jar" />
	<property name="shape-viewer-jar" value="shapefile-viewer.jar" />
	
	<tstamp>
		<format property="build.date" pattern="MM/dd/yyyy HH:mm" />
	</tstamp>
	
	<!-- Common path for building application code -->
	<path id="common-modulepath">
		<fileset dir="${lib.dir}">
	    	<include name="*.jar"/>
		</fileset>
		<fileset dir="${archive.dir}/lib">
			<include name="*.jar"/>
		</fileset>
		<fileset dir="${archive.dir}/jars">
			<include name="*.jar"/>
		</fileset>
	 </path>
	
</project>